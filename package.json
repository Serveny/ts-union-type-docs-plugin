{
    "name": "ts-union-docs-plugin",
    "version": "0.1.0",
    "publisher": "Serveny",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md"
    ],
    "prepublishOnly": "npm run build",
    "repository": {
        "type": "git",
        "url": "https://github.com/Serveny/ts-union-docs-plugin"
    },
    "devDependencies": {
        "@types/node": "25.0.3",
        "rollup-plugin-node-externals": "8.1.2",
        "typescript": "5.9.3",
        "vite": "7.3.0",
        "vite-plugin-dts": "4.5.4",
        "vitest": "^4.0.16"
    },
    "scripts": {
        "check": "tsc --noEmit",
        "build": "vite build",
        "watch": "vite",
        "refresh": "npm run build && cd ../example && npm i",
        "watch-and-refresh": "npx nodemon -w ./src -e ts -x \"npm run build && cd ../example && npm i\"",
        "debug": "TSS_DEBUG=5667 code ../example --user-data-dir ~/.vscode-debug/",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui"
    }
}